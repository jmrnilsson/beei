# Supported things in vs pro 2017
# - indent_style
# - indent_size
# - tab_width
# - end_of_line
# - charset
# - trim_trailing_whitespace
# - insert_final_newline
# - root

[*.py]
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
